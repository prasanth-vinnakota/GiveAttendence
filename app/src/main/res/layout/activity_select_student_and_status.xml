<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".SelectStudentAndStatusActivity">

    <TextView
        android:drawableTop="@mipmap/id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold|italic"
        android:textColor="#000"
        android:text="@string/select_id_and_status"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"/>

    <Spinner
        android:id="@+id/selectStudentID"
        android:layout_width="300sp"
        android:layout_height="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="50sp"
        android:background="#11000000"/>

    <Spinner
        android:id="@+id/selectStudentStatus"
        android:layout_width="300sp"
        android:layout_height="30sp"
        android:layout_gravity="center"
        android:layout_marginTop="20sp"
        android:background="#11000000"/>

    <android.support.v7.widget.CardView
        android:layout_width="300sp"
        android:layout_height="30sp"
        android:layout_gravity="center"
        app:cardCornerRadius="25sp"
        android:layout_marginTop="50sp"
        android:elevation="10sp">

    <Button

        android:id="@+id/submitStudentIdAndStatus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:text="@string/submit" />

    </android.support.v7.widget.CardView>

</LinearLayout>
